@using CvMakerApp.Entity.Entities
@model Stack
@{
    ViewData["Title"] = "UpdateStack";
    Layout = "~/Views/Admin/Index.cshtml";
}
<h3>Teknik Beceri Güncelle</h3>
<br />
<form method="post">
    <input type="hidden" class="form-control" asp-for="StackId" value="@Model.StackId" />
    <label>Yetkinlikler: </label>
    <textarea rows="5" class="form-control" asp-for="Description" value="@Model.Description"></textarea><br />
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

